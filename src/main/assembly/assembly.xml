<?xml version="1.0"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

    <id>reader</id>

    <includeBaseDirectory>true</includeBaseDirectory>

    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/assembly/logs</directory>
            <outputDirectory>logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/conf</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/db</directory>
            <outputDirectory>db</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/assembler-${project.name}/jsw/${project.name}/etc</directory>
            <outputDirectory>etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/assembler-${project.name}/jsw/${project.name}/lib</directory>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
    </fileSets>


    <files>
        <file>
            <source>${project.build.directory}/assembler-${project.name}/jsw/${project.name}/bin/${project.name}</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>750</fileMode>
        </file>
        <file>
            <source>${project.build.directory}/assembler-${project.name}/jsw/${project.name}/bin/wrapper-linux-x86-64</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>750</fileMode>
        </file>
        <file>
            <source>${project.build.directory}/assembler-${project.name}/jsw/${project.name}/bin/wrapper-macosx-universal-64</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>750</fileMode>
        </file>
    </files>

